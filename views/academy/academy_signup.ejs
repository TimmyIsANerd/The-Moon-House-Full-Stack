<html lang="en">
<%- include('./partials/academy/academy_head.ejs'); %> 
<%- include('./partials/academy/academy_partial.ejs'); %> 
<body>
    <h1>Student Sign Up</h1>
    <section id="access_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-xs-12 col-sm-12 mx-auto">
                    <div class="form_surface">
                        <div class="form col-12">
                            <form id="reg-form">
                                <div class="form-group">
                                    <div class="logo_container">
                                        <img src="/assets/img/nav-logo.png" class="logo" alt="">
                                    </div>
                                    <div class="text-center">
                                        <h3>Sign Up</h3>
                                    </div>
                                    <div class="input">    
                                        <input type="text" class="form-control" name="firstName" placeholder="First Name" id="firstName" required>
                                        <input type="text" class="form-control" name="lastName" placeholder="Last Name" id="lastName" required>
                                        <div id="fullname-error" style="color:red; font-size:12px;text-align:left;"></div>
                                        <input class="form-control" autocomplete="off" type="email" name="email" id="email" placeholder="Email" required>
                                        <div id="email-error" style="color:red; font-size:12px;text-align:left;"></div>
                                        <input class="form-control" autocomplete="off" type="password" name="password" id="password" placeholder="Password" required minlength="8">
                                        <div id="password-error" style="color:red; font-size:12px;text-align:left;"></div>
                                        <!-- <p>Already have an account? <a href="/user/login" class="text-bold">Login</a></p> -->
                                        <button type="submit" value="Submit Form" class="quote-btn btn">Sign Up</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const form = document.getElementById('reg-form');
        form.addEventListener('submit',registerUser)

        // 1. Send Data as JSON
        async function registerUser(e){
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            const result = await fetch('/api/register', {
                method : 'POST',
                headers: {
                    'Content-Type':'application/json'
                },
                body: JSON.stringify({
                    email,
                    password
                })
            }).then((res) => res.json());

            if(result.status === 'ok'){
                // Everything went fine
            } else {
                // something went wrong
                alert(result.error);
            }
        }
    </script>
